@model BT_NetcoreMVC.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="page-header">
    <h1><i class="bi bi-trash me-2 text-danger"></i>Delete Employee</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i> Back to List
    </a>
</div>

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Are you sure you want to delete this employee?</h5>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-circle me-2"></i>
            <strong>Warning:</strong> This action cannot be undone.
        </div>
        
        <div class="row mb-3">
            <div class="col-md-12">
                <div class="d-flex align-items-center mb-4">
                    <div class="bg-light p-3 rounded-circle me-3">
                        <i class="bi bi-person-circle fs-3 text-danger"></i>
                    </div>
                    <div>
                        <h3 class="mb-1">@Html.DisplayFor(model => model.Name)</h3>
                        <p class="text-muted mb-0">
                            <i class="bi bi-building me-1"></i>
                            @Html.DisplayFor(model => model.Department.DepartmentName)
                        </p>
                    </div>
                </div>
            </div>
        </div>
        
        <hr class="my-4">
        
        <div class="row">
            <div class="col-md-6">
                <h5 class="mb-3"><i class="bi bi-info-circle me-2"></i>Employee Information</h5>
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.EmployeeId)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.EmployeeId)</dd>
                    
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                    
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Address)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>
                    
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <h5 class="mb-3"><i class="bi bi-building me-2"></i>Department Information</h5>
                <dl class="row">
                    <dt class="col-sm-4">Department</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-info">
                            @Html.DisplayFor(model => model.Department.DepartmentName)
                        </span>
                    </dd>
                    
                    <dt class="col-sm-4">Department ID</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Department.DepartmentId)</dd>
                </dl>
            </div>
        </div>
        
        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="EmployeeId" />
            <div class="d-flex justify-content-end">
                <a asp-action="Index" class="btn btn-outline-secondary me-2">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-1"></i> Delete
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add shake animation to delete button to draw attention to the dangerous action
            $(".btn-danger").hover(
                function() {
                    $(this).addClass("animate__animated animate__headShake");
                },
                function() {
                    $(this).removeClass("animate__animated animate__headShake");
                }
            );
            
            // Add fade-in animation
            $(".card").css('opacity', '0').animate({opacity: 1}, 500);
        });
    </script>
}
