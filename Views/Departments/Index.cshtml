@model IEnumerable<BT_NetcoreMVC.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<div class="page-header">
    <h1><i class="bi bi-building me-2"></i>Departments</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Create New Department
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.DepartmentId)
                        </th> 
                        <th>
                            @Html.DisplayNameFor(model => model.DepartmentName)
                        </th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>
                            <span class="fw-medium">@Html.DisplayFor(modelItem => item.DepartmentId)</span>
                        </td>
                        <td>
                            <span class="fw-medium">@Html.DisplayFor(modelItem => item.DepartmentName)</span>
                        </td>
                        <td class="text-center">
                            <div class="action-buttons justify-content-center">
                                <a asp-action="Edit" asp-route-id="@item.DepartmentId" class="btn btn-sm btn-outline-primary" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.DepartmentId" class="btn btn-sm btn-outline-info" title="Details">
                                    <i class="bi bi-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.DepartmentId" class="btn btn-sm btn-outline-danger" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add animation to rows when page loads
            $("tbody tr").each(function(index) {
                $(this).css('opacity', '0');
                $(this).delay(100 * index).animate({opacity: 1}, 500);
            });
        });
    </script>
}
