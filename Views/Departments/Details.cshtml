@model BT_NetcoreMVC.Models.Department

@{
    ViewData["Title"] = "Department Details";
}

<div class="page-header">
    <h1><i class="bi bi-building me-2"></i>Department Details</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.DepartmentId" class="btn btn-primary">
            <i class="bi bi-pencil me-1"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>
</div>

<div class="detail-view">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex align-items-center">
                <div class="bg-light p-3 rounded-circle me-3">
                    <i class="bi bi-building fs-3 text-primary"></i>
                </div>
                <div>
                    <h3 class="mb-1">@Html.DisplayFor(model => model.DepartmentName)</h3>
                    <p class="text-muted mb-0">Department ID: @Html.DisplayFor(model => model.DepartmentId)</p>
                </div>
            </div>
        </div>
    </div>
    
    <hr class="my-4">
    
    <div class="row">
        <div class="col-md-12">
            <h4 class="mb-3"><i class="bi bi-people me-2"></i>Employees in Department</h4>
            @if (Model.Employees != null && Model.Employees.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model.Employees)
                            {
                                <tr>
                                    <td>@employee.EmployeeId</td>
                                    <td>@employee.Name</td>
                                    <td>@employee.Email</td>
                                    <td>
                                        <a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.EmployeeId"
                                           class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-info-circle"></i> Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i> No employees in this department yet.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add fade-in animation to the detail view
            $(".detail-view").hide().fadeIn(500);
        });
    </script>
}
