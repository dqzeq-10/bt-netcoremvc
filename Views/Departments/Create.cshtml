@model BT_NetcoreMVC.Models.Department

@{
    ViewData["Title"] = "Create Department";
}

<div class="page-header">
    <h1><i class="bi bi-building-add me-2"></i>Create Department</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i> Back to List
    </a>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="DepartmentId" class="control-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-hash"></i></span>
                            <input asp-for="DepartmentId" class="form-control" />
                        </div>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="DepartmentName" class="control-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-building"></i></span>
                            <input asp-for="DepartmentName" class="form-control" placeholder="Enter department name" />
                        </div>
                        <span asp-validation-for="DepartmentName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <hr class="my-4">
            
            <div class="form-group d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-1"></i> Create
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Add animation to form
            $(".card").css('opacity', '0').animate({opacity: 1}, 500);
            
            // Focus on first input
            $('form input:first').focus();
        });
    </script>
}
